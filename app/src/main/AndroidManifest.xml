<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jennifertestu.coeffapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.AideActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.BackupActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.AnneeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.AjoutNoteActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.NotesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.AjoutMatiereActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.UpdateMatiereActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.UpdateNoteActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.ChargementActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>